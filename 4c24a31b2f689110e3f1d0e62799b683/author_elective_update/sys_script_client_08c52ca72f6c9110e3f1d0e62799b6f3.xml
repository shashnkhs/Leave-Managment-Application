        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
   if (isLoading || newValue === '') {
      return;
   }

   //Type appropriate comment here, and begin script below
	var ga = new GlideAjax('lmsAjax');
	ga.addParam('sysparm_name','getLeaveBucket');
	ga.addParam('sysparam_user',g_user.userID);
	ga.addParam('sysparm_leavetype',newValue);
	ga.getXML(getBucket);
	
	function getBucket(response)
	{
		var answer = response.responseXML.documentElement.getAttribute("answer");
		var result = JSON.parse(answer); //answer basically store the data coming from the scripyt include
		g_form.setValue('accrued',result.accrued);// to set the value into the answer and result
		g_form.setValue('balance',result.balance);
		g_form.setValue('taken',result.taken);
	}

   
}]]></script>
